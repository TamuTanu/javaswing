package com.tamutanu;

import javax.swing.*;
import java.awt.*;

public class Myframe extends JFrame {
    Myframe(){

        this.setSize(400,400);//set dimension x,y
        this.setTitle("Java Swing");
        this.setLayout(null);
        this.setResizable(false);//make user can't expend resolution.
        this.setVisible(true);//make frame visible
        this.setDefaultCloseOperation(WindowConstants.EXIT_ON_CLOSE);//exit application

        ImageIcon image = new ImageIcon("D:\\save\\logo.png");//set application icon
        this.setIconImage(image.getImage());
        this.getContentPane().setBackground(new Color(234,220,224));//change color BG or Get new color
    }
}
